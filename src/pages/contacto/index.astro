---
import Layout from "../../layouts/Layout.astro";

---


<Layout>
    <section class="container">
        <h2>Contactanos para colocar tu anuncio en Aqui esta.us</h2>
        <form action="#" class="formContacto">
            <label>Nombre de representante</label>
            <input type="text" placeholder="nombre"/>
            <label>Nombre de la empresa/servicio</label>
            <input type="text" placeholder="empresa/servicio"/>
            <label>Mensaje sobre el anuncio a publicar</label>
            <textarea name="mensaje" id="mensaje" placeholder="redacte su mensaje"></textarea>
            <button>Enviar</button>
        </form>
    </section>
</Layout>


<style>
    .container{
        padding: 10% 0 ;
        font-family: var(--familjen);
        height: auto;
        max-width: 100vw;
    }

    .container > h2{
        font-size: 2rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .formContacto{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 1rem;
    }

    .formContacto > input{
        border: none;
        padding: 0.4rem 1rem;
        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
    }

    .formContacto > textarea{
        width: 450px;
        height: 250px;
        border: none;
        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
    }

    .formContacto > button{
        background-color: #ef3f3f;
        border: none;
        color: white;
        font-size: 1.3rem;
        font-weight: bold;
        padding: 0.5rem 1.5rem;
        border-radius: 30px;
    }
</style>