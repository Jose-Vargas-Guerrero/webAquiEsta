---
import Layout from "../../layouts/Layout.astro"
import ServicioCard from "../../components/astroComponents/ServicioCard.astro"
import legales from "../../components/data/legal"
---


<Layout title="Empleos">
    <section class="empleos">
       {
        legales.map((servicio) => (
        <ServicioCard key={servicio.id} nombre={servicio.nombre} descripcion={servicio.descripcion}
       imagen={servicio.imagen}
       url={servicio.url}
       path="legales"
       />
        ))
       }
    </section>
</Layout>


<style>
    .empleos{
        height: auto;
        max-width: 100vw;
        padding: 12% 3rem;
        font-family: var(--familjen);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        gap: 3.5rem;
    }

    .card{
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        gap: 2rem;

    }

    .info{
        height: auto;
        width: 60%;
        padding: 0 2rem;
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        align-items: flex-start;
    }

    .card >img{
        width: 294px;
        height: 165px;
        object-fit: cover;
    }

    .info > h2{
        margin: 0 0;
    }

    .info > a{
        padding: 10px 20px;
        border-radius: 30px;
        text-decoration: none;
        font-weight: bold;
        color: white;
        background-color: #ef3f3f;
    }

    .info > a:hover{
        color: yellow;
    }


</style>