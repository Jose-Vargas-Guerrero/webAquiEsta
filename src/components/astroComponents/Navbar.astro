---
import logo from "../../assets/logo.png";
---

<div class="navbar">
    <img src={logo.src} alt="aquiesta.us logo" />
    <div class="links">
      <a href="/">Inicio</a>
      <div class="dropdown">
        <a href="/" class="dropbtn">Explora</a>
        <div class="dropdown-content">
          <a href="/servicios">Servicios</a>
          <a href="/empleos">Empleos</a>
          <a href="/realState">Real State</a>
          <a href="/compraVenta">Compra y venta</a>
          <a href="/educacion">Educaci√≥n</a>
          <a href="/artistas">Artistas</a>
          <a href="/restaurantes">Restaurantes</a>
          <a href="/legales">Legal</a>
          <a href="/deportes">Deportes</a>
          <a href="/envios">Envios</a>
        </div>
      </div>
      <a href="/planes">Planes</a>
      <a href="#">Contacto</a>
      <a href="/yellowPages">Yellow pages</a>
    </div>
  </div>
  
  <style>
    .navbar {
      height: 130px;
      width: 100vw;
      background-color: #444444;
      position: fixed;
      top: 0;
      display: flex;
      z-index: 4;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }
  
    .navbar > img {
      height: 80px;
      width: 220px;
      margin: 0 0;
    }
  
    .links {
      margin: 0 0;
      position: relative;
      width: 50%;
      display: flex;
      flex-direction: row;
      justify-content: space-evenly;
      align-items: center;
    }
  
    .links > a, .dropbtn {
      color: white;
      font-weight: bold;
      text-decoration: none;
      font-family: var(--familjen);
      cursor: pointer;
      padding: 10px 15px;
      display: inline-block;
    }
  
    .dropdown {
      position: relative;
      display: inline-block;
    }
  
    .dropdown-content {
      display: none;
      position: absolute;
      top: 100%;
      left: 0;
      background-color: white;
      min-width: 150px;
      box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
      border-radius: 4px;
      z-index: 10;
    }
  
    .dropdown-content a {
      color: black;
      font-family: var(--familjen);
      padding: 10px;
      display: block;
      text-decoration: none;
    }
  
    .dropdown-content a:hover {
        background-color: var(--redDark);
        color: white;
    }

    .links > a:hover{
      color: #ef3f3f;
    }
  
    .dropdown:hover .dropdown-content {
      display: block;
    }
  </style>